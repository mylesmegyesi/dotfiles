[user]
  name = Myles Megyesi
  email = mylesmegyesi@me.com
[github]
  user = mylesmegyesi
[core]
  editor = vim
  whitespace = trailing-space,space-before-tab,cr-at-eol
  autocrlf = input
[apply]
  whitespace = fix
[color]
  ui = true
[alias]
  br = branch
  co = checkout
  hist = log --pretty=format:\"%Cgreen%h%Creset %Cblue%ad%Creset %s%C(yellow)%d%Creset %Cblue[%an]%Creset\" --graph --date=short
  serve = !git daemon --reuseaddr --verbose --base-path=. --export-all --enable=receive-pack ./.git
  st = status
  staged = diff --staged
[push]
  default = tracking
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[commit]
	gpgsign = true
